rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Family documents: any authenticated user can read/write
    // In production, tighten these rules to only allow members
    match /families/{familyCode} {
      allow read, write: if request.auth != null;
    }

    // Alarm documents: any authenticated user can create
    match /alarms/{alarmId} {
      allow create: if request.auth != null;
      allow read: if false; // Alarms are write-only from the client
    }
  }
}
